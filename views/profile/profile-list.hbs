<div class="pilots spacediv">
    <div class="container">
        <div class="card">
            <h1 class="card-header">Bienvenido/a de nuevo {{username}}</h2>
                <h2 class="card-header text-center">Pilotos Favoritos de {{username}}</h2>

                <div class="row">
                    {{#each favpilot}}
                    <div class="col-4 div-margin">
                        <div class="card opacicard text-white bg-dark">
                            <div class="view view-cascade overlay">
                                <img class="card-img-top" src="{{photo}}" alt="Card image cap">
                                <a href="#!">
                                    <div class="mask rgba-white-slight"></div>
                                </a>
                            </div>
                            <div class="card-body text-center">
                                <h2 class="card-title"><strong>{{givenName}} {{familyName}}</strong></h2>
                                <h5>Nacionalidad: {{nationality}}</h5>
                                <h5>Fecha nacimiento: {{dateOfBirth}}</h5>
                                <h5>Número: {{permanentNumber}}</h5>
                                <div class="card-footer text-muted text-center mt-4">
                                    <a href="/profile/deletepilot/{{id}}">Eliminar de favoritos</a>
                                </div>
                            </div>
                        </div>
                        {{!-- <div class="col-4">
                            <h2>{{givenName}} {{familyName}}</h2>
