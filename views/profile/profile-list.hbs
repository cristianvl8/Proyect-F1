                            <img src="{{photo}}" alt="foto del piloto"> <br>
                            <a href="/profile/deletepilot/{{id}}">Eliminar de favoritos</a>
                            </div> --}}
                    </div>
                    {{/each}}
                </div>
        </div>
    </div>
    <section>
        <div class="container">
            <div class="card text-center">
                <h2 class="card-header text-center">Circuitos Favoritos de {{username}}</h2>
                <div class="row">
                    {{#each favcircuit}}

                    <div class="col-6 space">

                        <div class="card text-center">

                            <h2 class="card-header">Circuito de {{circuitName}}</h2>

                            <div class="card-body">

                                <h4 class="card-text">País: {{country}}</h4>

                                <picture class="circuitdetail">
                                    <img src="{{photo}}">
                                </picture>

                                <div class="card-footer text-muted text-center mt-4">
                                    <a href="/profile/deletecircuit/{{id}}">Eliminar de favoritos</a>
                                </div>

                            </div>

                        </div>
                    </div>

                    {{/each}}

                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="card text-center">
                <h2 class="card-header">Escuderías Favoritas de {{username}}</h2> <br>
                <div class="row">
                    {{#each favconstructor}}

                    <div class="col space">

                        <div class="card">

                            <h2 class="card-header">Equipo {{name}}</h2>

                            <div class="card-body">

                                <h4 class="card-text">País: {{nationality}}</h4>

                                <picture class="teamdetail">

                                    <img src="{{photo}}" alt="foto del constructor">
                                </picture>

                                <div class="card-footer text-muted text-center mt-4">
                                <a href="/profile/deleteconstructor/{{id}}">Eliminar de favoritos</a>
                                </div>

                            </div>

                        </div>
                    </div>

                    {{/each}}

                </div>
            </div>
        </div>

