

<div class="pilots">
<div class="container">
    <div class="row spacediv">
        <div class="card opacicard justify-content-center text-center align">
            <h2 class="card-header">{{givenName}} {{familyName}}</h2>
            <div class="card-body">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8">
                            <p>Fecha de nacimiento:  {{dateOfBirth}}</p>
                            <p>Nationalidad:  {{nationality}}</p>
                            <p>Código de coche: {{code}}</p>
                            
                            <figure class="imgfav">
                                
                                <a href="/profile/favpilot/{{id}}"><img src="/images/heartfav.png"></a>
                            </figure>
                        </div>
                        <div class="col-md-3">
                            <picture class="pilotdetail">
                                <img src="{{photo}}" alt="foto del piloto">
                            </picture>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <h2 class="card-header">Comprueba el palmarés del piloto</h2>
                    <form id="form1">

                        <label>Introduce el año</label>
                        <input id="input1" type="text">

                        <label>Introduce the piloto</label>
                        <input id="input2" type="text">
                        <button class="btn btn-light">Enviar</button>
                    </form> <br>
                    <h3 id="result"></h3>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/javascripts/pilot.js"></script>